<metal:macro use-macro="master">
    <metal:slot fill-slot="title">
        <title>Upload | ArchSim DB</title>
    </metal:slot>

    <metal:slot fill-slot="body">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Insert Configuration</h1>
            </div>
        </div>

        <div class="content">
            <div tal:condition="exists:inserted_id" class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                Successfully inserted a configuration with id <span tal:replace="inserted_id" />.
            </div>
            <p>
                Please fill out the forms below to create a new configuration. Configurations are purely
                metadata objects, and are a collection of applications/simulations. A configuration also
                has a parent experiment.
            </p>
            <p>
                All fields are required as these provide necessary metadata for the database.
            </p>

            <hr>
            <form action="/add/configuration" method="post" accept-charset="utf-8" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-4 form-group">
                        <label for="_conf_name">Configuration Name</label>
                        <input required name="_conf_name" class="form-control" placeholder="Enter name">
                    </div>
                    <div class="col-lg-4 form-group">
                        <label for="_conf_owner">Configuration Owner</label>
                        <input required name="_conf_owner" class="form-control" placeholder="Enter owner">
                    </div>
                    <div class="col-lg-4 form-group">
                        <label for="_conf_date">Configuration Date</label>
                        <input required name="_conf_date" class="form-control" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))"
                               placeholder="yyyy-mm-dd">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 form-group">
                        <label for="_exp_name">Experiment Name</label>
                        <input required name="_exp_name" class="form-control" placeholder="Start typing...">
                    </div>
                    <div class="col-lg-6 form-group">
                        <label for="_exp_id">Experiment ID</label>
                        <input required name="_exp_id" class="form-control" placeholder="Start typing...">
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Submit Button</button>
                <button type="reset" class="btn btn-default">Reset Button</button>
            </form>
        </div>
    </metal:slot>
</metal:macro>