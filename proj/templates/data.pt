<metal:macro use-macro="master">
    <metal:slot fill-slot="title">
        <title>Data | ArchSim DB</title>
    </metal:slot>

    <metal:slot fill-slot="head">
        <!-- DataTables CSS -->
        <link href="${request.static_url('proj:static/vendor/datatables-plugins/dataTables.bootstrap.css')}" rel="stylesheet">
        <link href="${request.static_url('proj:static/vendor/datatables-responsive/dataTables.responsive.css')}" rel="stylesheet">
    </metal:slot>

    <metal:slot fill-slot="scripts">
        <!-- DataTables JavaScript -->
        <script src="${request.static_url('proj:static/vendor/datatables/js/jquery.dataTables.min.js')}"></script>
        <script src="${request.static_url('proj:static/vendor/datatables-plugins/dataTables.bootstrap.min.js')}"></script>
        <script src="${request.static_url('proj:static/vendor/datatables-responsive/dataTables.responsive.js')}"></script>

        <script type="text/javascript" id="data" data="${data}">
            var data = JSON.parse($("#data").attr("data"))[0];
            var listdata = []
            for (var key in data) {
                var val = data[key];
                if (typeof val == "object") {
                    listdata.push({'key': key, 'value': JSON.stringify(val)})
                } else {
                    listdata.push({'key': key, 'value': val})
                }
            }
            var parsed_data = { data: listdata };
            console.log(parsed_data);
            $(document).ready(function() {
                $('#data_table').DataTable({
                    data: parsed_data.data,
                    columns: [
                        { data: 'key' },
                        { data: 'value' }
                    ],
                    responsive: true,
                    pageLength: 25
                });
            });
        </script>
    </metal:slot>

    <metal:slot fill-slot="body">
        <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Data Dump</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="data_table">
                        <thead>
                            <tr>
                                <th>Key</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.col-lg-12 -->
            </div>
    </metal:slot>
</metal:macro>